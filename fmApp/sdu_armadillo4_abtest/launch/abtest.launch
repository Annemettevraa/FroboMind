<launch>
	<param name="robot_max_velocity" value="2.0"/>
	<param name="diff_steer_wheel_radius" value="0.159"/>
	<param name="diff_steer_wheel_ticks_per_rev" value="625"/>
	<param name="diff_steer_wheel_distance" value="3.175"/>
	
	<include file="$(find sdu_armadillo4_remote)/launch/includes/action.launch"/>	
	<include file="$(find sdu_armadillo4_remote)/launch/includes/robot.launch"/>
	<include file="$(find sdu_armadillo4_remote)/launch/includes/perception.launch"/>

	<node pkg="tf" type="static_transform_publisher" name="gps_broadcaster" args="-588784.0 -6137262.0 0 0 0 0 map odom 100"/> 
	<node pkg="tf" type="static_transform_publisher" name="mast_bottom_broadcaster" args="0 0 -1.20 0 0 0 base_link map 100"/>
	<node pkg="tf" type="static_transform_publisher" name="base_broadcaster" args="0 0 0 3.14 0 0 base_footprint base_link 100"/>

	<group ns="DecisionMaking">
    	<node pkg="sdu_armadillo4_abtest" type="abtest.py" name="remote" output="screen">
    		<param name="deadman_topic" value="/fmSignals/deadman" />
			<param name="cmd_vel_topic" value="/fmSignals/cmd_vel" />
			<param name="max_linear_velocity" value="0.5"/>
			<param name="max_angular_velocity" value="0.2"/>
			<param name="deadband" value="1"/>
			<param name="reduced_range" value="40"/>
			<param name="feedback_topic" value="/fmHMI/joy/set_feedback" />
			<param name="joy_topic" value="/fmHMI/joy" />
			<param name="status_topic" value="/fmData/status"/>
			<param name="publish_frequency" value="10"/>
		</node>
	</group>
   
    <group ns="fmHMI">
        <node pkg="wiimote" type="wiimote_node.py" name="remote_control" respawn="true" />
	</group>
</launch>

